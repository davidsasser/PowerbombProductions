{{> header }}
<div class="main">
  <ul class="cards">
    {{#if posts}}
        {{#each posts}}
    <li class="cards-item">
      <div class="card">
        <div class="card-image"><img src="{{this.photo}}"></div>
        <div class="card-content">
          <table class="main-table-div"> 
              <tr> 
                  <td valign="top"><h2 class="card-title">{{this.title}}</h2></td> 
              </tr>
              <tr>
                <td><p class="card-text">{{this.content}}</p></td>
              </tr>
              <tr> 
                  <td valign="bottom"><a class="card-btn" href="/blogs/{{this.post_id}}">Read More</a></td> 
              </tr> 
          </table> 
        </div>
      </div>
    </li>
    {{/each}}
    {{/if}}
   
  </ul>
</div>
{{> footer}}